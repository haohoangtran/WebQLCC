{{#if msg}}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">404 Not Found</h4>
                    <div class="card-content">
                        <div class="alert alert-danger">
                            {{msg}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">404 Not Found</h4>
                    <div class="card-content">
                        <img src="/images/404.jpg" alt="404">
                        <div class="alert alert-danger text-center">
                            Ai đưa bạn tới đây, đi đi không có ai ở đây đâu!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/if}}
<script>
    document.title = "Opps! Something went wrong!"
</script>